#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname=('file')
pkgver=5.37
pkgrel=3
pkgdesc='File type identification utility'
url='https://www.darwinsys.com/file/'
license=('custom')
arch=('x86_64')
groups=('base' 'base-devel')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
depends=(
	'glibc'
	#'libseccomp'
	'zlib'
)

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
source=(
	"ftp://ftp.astron.com/pub/file/file-$pkgver.tar.gz"
	"ftp://ftp.astron.com/pub/file/file-$pkgver.tar.gz.asc"
)
md5sums=(
	'80c29aca745466c6c24d11f059329075'
	'SKIP'
)

#==============================================================================#
#       Package preparation sequence                                           #
#==============================================================================#
prepare() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Run autogen script if exists
	if [ -x autogen.sh ]; then
		NOCONFIGURE=1 ./autogen.sh
	fi
}

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Fix linking libmagic (vfork needs libpthread)
	CFLAGS+=" -pthread"

	# Default configure options
	config_opts=(
		'--prefix=/usr'
		'--bindir=/usr/bin'
		'--sbindir=/usr/bin'
		'--libdir=/usr/lib'
		'--libexecdir=/usr/lib'
		'--sysconfdir=/etc'
		'--localstatedir=/var'
		'--datadir=/usr/share/file'
		'--enable-silent-rules'
		'--enable-shared'
		'--disable-static'
		'--enable-fsect-man5'

	# 'libseccomp' related options
		'--enable-libseccomp'
		#'--disable-libseccomp'

	# 'zlib' related options
		'--enable-zlib'
		#'--disable-zlib'
	)

	# Run package configuration script
	./configure "${config_opts[@]}"

	# Set correct LDFLAGS to build a shared archive
	if [ -f libtool ]; then
		sed -e "s/ -shared / $LDFLAGS\0/g" -i libtool
	fi

	# Build package
	make
}

#==============================================================================#
#       Package self testing sequence                                          #
#==============================================================================#
check() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Run internal checks
	make -k check
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#
package() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Install files
	make DESTDIR=$pkgdir install

	# Install license file
	install -Dm644 COPYING $pkgdir/usr/share/licenses/file/COPYING
}

################################################################################
#                                 END OF FILE                                  #
################################################################################
