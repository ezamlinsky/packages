		#'-Dgnu-efi=false'

	# 'gnutls' related options
		#'-Dgnutls=true'
		'-Dgnutls=false'
		#'-Ddns-over-tls=gnutls'

	# 'hwids' related options
		'-Dhwdb=true'
		#'-Dhwdb=false'

	# 'kbd' related options
		'-Dvconsole=true'
		#'-Dvconsole=false'

	# 'kmod' related options
		'-Dkmod=true'
		#'-Dkmod=false'

	# 'libelf' related options
		'-Delfutils=true'
		#'-Delfutils=false'

	# 'libgcrypt & libgpg-error' related options
		'-Dgcrypt=true'
		#'-Dgcrypt=false'

	# 'libidn' related options
		#'-Dlibidn=true'
		'-Dlibidn=false'
		#'-Didn=true'

	# 'libidn2' related options
		#'-Dlibidn2=true'
		'-Dlibidn2=false'

	# 'libiptc' related options
		#'-Dlibiptc=true'
		'-Dlibiptc=false'

	# 'libmicrohttpd' related options
		#'-Dmicrohttpd=true'
		'-Dmicrohttpd=false'

	# 'libmicrohttpd & curl' related options
		#'-Dremote=true'
		'-Dremote=false'

