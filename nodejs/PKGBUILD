#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname='nodejs'
pkgver=12.6.0
pkgrel=1
pkgdesc='Evented I/O for V8 javascript'
url='https://nodejs.org/'
license=('MIT')
arch=('x86_64')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
depends=(
	'c-ares'
	'gcc-libs'
	'glibc'
	#'http-parser'
	'icu'
	'libnghttp2'
	'libuv'
	'openssl'
	'zlib'
)
makedepends=(
	'procps-ng'
	'python2'
)
optdepends=('npm: nodejs package manager')

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
source=("nodejs-$pkgver.tar.gz::https://github.com/nodejs/node/archive/v${pkgver}.tar.gz")
sha512sums=('31edba94017206c9ac26d6c89871ccb1d62d9b5ff1aae278dfd167ae23eb5b4059ccb80b0dedf5deb71abeee2a65e0e74d089454070869426ebd3d67f7f2aba5')

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd node-$pkgver

	# Default configure options
	config_opts=(
		'--prefix=/usr'
		'--enable-lto'
		'--dest-os=linux'
		'--dest-cpu=x86_64'
		'--without-npm'
		'--experimental-http-parser'

	# 'c-ares' related options
		'--shared-cares'

	# 'http-parser' related options
		#'--shared-http-parser'

	# 'icu' related options
		'--with-intl=system-icu'
		'--without-intl'

	# 'libnghttp2' related options
		'--shared-nghttp2'

	# 'libuv' related options
		'--shared-libuv'

	# 'openssl' related options
		'--shared-openssl'

	# 'zlib' related options
		'--shared-zlib'
	)

	# Run package configuration script
	./configure "${config_opts[@]}"

	# Set correct LDFLAGS to build a shared archive
	if [ -f libtool ]; then
		sed -e "s/ -shared / $LDFLAGS\0/g" -i libtool
	fi

	# Build package
	make
}

#==============================================================================#
#       Package self testing sequence                                          #
#==============================================================================#
check() {

	# Change directory to source directory
	cd node-$pkgver

	# Run internal checks
	make -k check
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#
package() {

	# Change directory to source directory
	cd node-$pkgver

	# Install files
	make DESTDIR=$pkgdir install

	# Install license file
	install -Dm644 LICENSE $pkgdir/usr/share/licenses/package_name/LICENSE
}

################################################################################
#                                 END OF FILE                                  #
################################################################################
