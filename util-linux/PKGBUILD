#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgbase='util-linux'
pkgname=('util-linux' 'libutil-linux')
pkgver=2.35.1
pkgrel=1
url='https://github.com/karelzak/util-linux'
license=('GPL2')
arch=('x86_64')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
makedepends=(
	'systemd'
	'python'
	'libcap-ng'
)

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
_basever=${pkgver%.*}
source=(
	"https://www.kernel.org/pub/linux/utils/util-linux/v$_basever/util-linux-$_basever.tar.xz"
	"https://www.kernel.org/pub/linux/utils/util-linux/v$_basever/util-linux-$_basever.tar.sign"
	'pam-login'
	'pam-common'
	'pam-runuser'
	'pam-su'
	'util-linux.sysusers'
	'60-rfkill.rules'
	'rfkill-unblock_.service'
	'rfkill-block_.service'
)
