#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgbase='pangomm'
pkgname=('pangomm' 'pangomm-docs')
pkgver=2.42.1
pkgrel=2
url='https://www.gtkmm.org/'
license=('LGPL')
arch=('x86_64')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
makedepends=(
	'cairomm-docs'
	'git'
	'glibmm-docs'
	'meson'
	'mm-common'
)

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
_commit='7dfc6c3372faaa4a7c492d08f09881b02095145b'
source=("git+https://gitlab.gnome.org/GNOME/$pkgbase.git#commit=$_commit")
sha256sums=('SKIP')

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd $pkgbase

	# Default configure options
	config_opts=(
		'-Dmaintainer-mode=true'
		'-Dbuild-deprecated-api=true'
		'-Dbuild-documentation=true'
	)

	# Run package configuration script
	arch-meson build "${config_opts[@]}"

	# Build package
	ninja -C build
}

#==============================================================================#
#       Package self testing sequence                                          #
#==============================================================================#
check() {

	# Change directory to source directory
	cd $pkgbase

	# Run internal tests
	ninja -C build test
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~#
#       Pangomm                                                                #
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~#
package_pangomm() {
	pkgdesc='C++ bindings for Pango'
	depends=(
		'cairomm'
		'gcc-libs'
		'glib2'
		'glibc'
		'glibmm'
		'libsigc++'
		'pango'
	)

	# Change directory to source directory
	cd $pkgbase

	# Install files
	DESTDIR=$pkgdir ninja -C build install

	# Change directory to target directory
	cd $pkgdir

	# Split 'pangomm-docs' package
	mkdir -p $srcdir/pangomm-docs/usr
	mv usr/share $srcdir/pangomm-docs/usr || true
}

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~#
#       Pangomm-docs                                                           #
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~#
package_pangomm-docs() {
	pkgdesc='C++ bindings for Pango (documentation)'
	depends=()
	options=('docs')

	# Copy files
	mv $srcdir/pangomm-docs/* $pkgdir
}

################################################################################
#                                 END OF FILE                                  #
