#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname=('libglvnd')
pkgver=1.3.1
pkgrel=1
pkgdesc='The GL Vendor-Neutral Dispatch library'
url='https://github.com/NVIDIA/libglvnd'
license=('custom:BSD-like')
arch=('x86_64')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
depends=(
	'glibc'
	'libx11'
)
makedepends=(
	'glproto'
	'libxext'
	'meson'
	'python'
	'xorgproto'
)

#==============================================================================#
#        Package relations                                                     #
#==============================================================================#
provides=(
	'libegl'
	'libgl'
	'libgles'
)

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
source=(
	"$pkgname-$pkgver.tar.gz::https://gitlab.freedesktop.org/glvnd/libglvnd/-/archive/v${pkgver}/libglvnd-v${pkgver}.tar.gz"
	'LICENSE'
)
sha512sums=(
	'f10b24ea983ee27813b7b64f13419d309479e34f3a1e4304f57ed01732d66df8d9d2c1e4f76577fc0827305d1b0a2fcea18445ce2953641f1d8452aa65b22e14'
	'bf0f4a7e04220a407400f89226ecc1f798cc43035f2538cc8860e5088e1f84140baf0d4b0b28f66e4b802d4d6925769a1297c24e1ba39c1c093902b2931781a5'
)

#==============================================================================#
#       Package preparation sequence                                           #
#==============================================================================#
prepare() {

	# Change directory to source directory
	cd $pkgname-v$pkgver

	# Run autogen script if exists
	if [ -x autogen.sh ]; then
		NOCONFIGURE=1 ./autogen.sh
	fi
}

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd $pkgname-v$pkgver

	# Default configure options
	config_opts=(
		'--prefix=/usr'
		'--bindir=/usr/bin'
		'--sbindir=/usr/bin'
		'--libdir=/usr/lib'
		'--libexecdir=/usr/lib'
		'--sysconfdir=/etc'
		'--localstatedir=/var'
		'--enable-silent-rules'
		'--enable-shared'
		'--disable-static'
		'--enable-debug=no'
		'--enable-egl'
		'--enable-glx'
		'--disable-gles1'
		'--enable-gles2'
		'--enable-asm'
		'--enable-tls'

	# 'libx11' related options
		'--enable-x11'
		#'--disable-x11'
	)

	# Run package configuration script
	./configure "${config_opts[@]}"

	# Set correct LDFLAGS to build a shared archive
	if [ -f libtool ]; then
		sed -e "s/ -shared / $LDFLAGS\0/g" -i libtool
	fi

	# Build package
	make
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#
package() {

	# Change directory to source directory
	cd $pkgname-v$pkgver

	# Install files
	make DESTDIR=$pkgdir install

	# Install license file
	install -Dm644 ../LICENSE $pkgdir/usr/share/licenses/libglvnd/LICENSE
}

################################################################################
#                                 END OF FILE                                  #
