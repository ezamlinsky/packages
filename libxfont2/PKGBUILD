#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname=('libxfont2')
pkgver=2.0.4
pkgrel=2
pkgdesc='X11 font rasterisation library'
url='https://xorg.freedesktop.org/'
license=('custom')
arch=('x86_64')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
depends=(
	'bzip2'
	'fontsproto'
	'freetype2'
	'glibc'
	'libfontenc'
	'xproto'
	'zlib'
)
makedepends=(
	'xorg-util-macros'
	'xtrans'
)

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
source=(
	"https://xorg.freedesktop.org/archive/individual/lib/libXfont2-$pkgver.tar.bz2"
	"https://xorg.freedesktop.org/archive/individual/lib/libXfont2-$pkgver.tar.bz2.sig"
)
sha512sums=(
	'7cf6c58e520e48e24fc4f05fec760fcbeaaac0cedeed57dded262c855e1515cc34cd033222945a0b016f6857b83009fc2a6946c7d632c2f7bb0060f8e8a8a106'
	'SKIP'
)

#==============================================================================#
#       Package preparation sequence                                           #
#==============================================================================#
prepare() {

	# Change directory to source directory
	cd libXfont2-$pkgver

	# Run autogen script if exists
	if [ -x autogen.sh ]; then
		NOCONFIGURE=1 ./autogen.sh
	fi
}

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd libXfont2-$pkgver

	# Default configure options
	config_opts=(
		'--prefix=/usr'
		'--bindir=/usr/bin'
		'--sbindir=/usr/bin'
		'--libdir=/usr/lib'
		'--libexecdir=/usr/lib'
		'--sysconfdir=/etc'
		'--localstatedir=/var'
		'--enable-silent-rules'
		'--enable-shared'
		'--disable-static'
		'--enable-devel-docs'
		'--disable-ipv6'
		'--disable-tcp-transport'
		'--enable-unix-transport'
		'--enable-fc'
		'--enable-builtins'
		'--enable-pcfformat'
		'--enable-bdfformat'
		'--enable-snfformat'

	# 'bzip2' related options
		'--with-bzip2'
		#'--without-bzip2'

	# 'freetype2' related options
		'--enable-freetype'
		#'--disable-freetype'
	)

	# Run package configuration script
	./configure "${config_opts[@]}"

	# Set correct LDFLAGS to build a shared archive
	if [ -f libtool ]; then
		sed -e "s/ -shared / $LDFLAGS\0/g" -i libtool
	fi

	# Build package
	make
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#
package() {

	# Change directory to source directory
	cd libXfont2-$pkgver

	# Install files
	make DESTDIR=$pkgdir install

	# Install license file
	install -Dm644 COPYING $pkgdir/usr/share/licenses/libxfont2/COPYING
}

################################################################################
#                                 END OF FILE                                  #
################################################################################
