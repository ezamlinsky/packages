#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname=('sshfs')
pkgver=3.7.0
pkgrel=1
pkgdesc='FUSE client based on the SSH File Transfer Protocol'
url='https://github.com/libfuse/sshfs'
license=('GPL')
arch=('x86_64')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
depends=(
	'fuse3'
	'glib2'
	'glibc'
	'openssh'
)
makedepends=(
	'meson'
	'python-docutils'
)

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
source=(
	"https://github.com/libfuse/sshfs/releases/download/sshfs-$pkgver/sshfs-$pkgver.tar.xz"
	"https://github.com/libfuse/sshfs/releases/download/sshfs-$pkgver/sshfs-$pkgver.tar.xz.asc"
)
sha256sums=(
	'6e7e86831f3066b356e7f16e22f1b8a8f177fda05146f6a5eb821c2fd0541c34'
	'SKIP'
)

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Run package configuration script
	arch-meson build

	# Build package
	ninja -C build
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#
package() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Install files
	DESTDIR=$pkgdir ninja -C build install
}

################################################################################
#                                 END OF FILE                                  #
################################################################################
