#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname=('perl-error')
pkgver=0.17027
pkgrel=2
pkgdesc='Perl/CPAN Error module - Error/exception handling in an OO-ish way'
url='http://search.cpan.org/dist/Error/'
license=('PerlArtistic' 'GPL')
arch=('any')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
depends=('perl')
checkdepends=(
	'perl-test-pod'
	'perl-test-pod-coverage'
)

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
source=("http://search.cpan.org/CPAN/authors/id/S/SH/SHLOMIF/Error-$pkgver.tar.gz")
sha512sums=('f7a649254bd2a5228a0baaa7bb286872dcbcf373134446176ff63a5ec0159e7472e0ea930aaff78f7f7961f797ae0a8e5c8725bdc06d2bab177ce469a4ede4b9')

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd Error-$pkgver

	# Create Makefile
	perl Makefile.PL INSTALLDIRS=vendor

	# Build package
	make
}

#==============================================================================#
#       Package self testing sequence                                          #
#==============================================================================#
check() {

	# Change directory to source directory
	cd Error-$pkgver

	# Run internal checks
	make -k test
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#
package() {

	# Change directory to source directory
	cd Error-$pkgver

	# Install files
	make DESTDIR=$pkgdir install
}

################################################################################
#                                 END OF FILE                                  #
################################################################################
