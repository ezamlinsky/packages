#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname=('xorg-font-util')
pkgver=1.3.1
pkgrel=2
pkgdesc='X.Org font utilities'
url='http://xorg.freedesktop.org/'
license=('custom')
arch=('x86_64')
groups=('xorg' 'xorg-fonts')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
depends=('glibc')
makedepends=('xorg-util-macros')

#==============================================================================#
#        Package relations                                                     #
#==============================================================================#
provides=('font-util')
conflicts=('font-util')
replaces=('font-util')

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
source=(
	"http://xorg.freedesktop.org/releases/individual/font/font-util-$pkgver.tar.bz2"
	"http://xorg.freedesktop.org/releases/individual/font/font-util-$pkgver.tar.bz2.sig"
)
sha256sums=(
	'aa7ebdb0715106dd255082f2310dbaa2cd7e225957c2a77d719720c7cc92b921'
	'SKIP'
)

#==============================================================================#
#       Package preparation sequence                                           #
#==============================================================================#
prepare() {

	# Change directory to source directory
	cd font-util-$pkgver

	# Run autogen script if exists
	if [ -x autogen.sh ]; then
		NOCONFIGURE=1 ./autogen.sh
	fi
}

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd font-util-$pkgver

	# Default configure options
	config_opts=(
		'--prefix=/usr'
		'--bindir=/usr/bin'
		'--sbindir=/usr/bin'
		'--libdir=/usr/lib'
		'--libexecdir=/usr/lib'
		'--sysconfdir=/etc'
		'--localstatedir=/var'
		'--enable-silent-rules'
		'--enable-shared'
		'--disable-static'
		'--with-fontrootdir=/usr/share/fonts'
		'--with-mapdir=/usr/share/fonts/util'
	)

	# Run package configuration script
	./configure "${config_opts[@]}"

	# Set correct LDFLAGS to build a shared archive
	if [ -f libtool ]; then
		sed -e "s/ -shared / $LDFLAGS\0/g" -i libtool
	fi

	# Build package
	make
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#
package() {

	# Change directory to source directory
	cd font-util-$pkgver

	# Install files
	make DESTDIR=$pkgdir install

	# Install license file
	install -Dm644 COPYING $pkgdir/usr/share/licenses/xorg-font-util/COPYING
}

################################################################################
#                                 END OF FILE                                  #
################################################################################
