#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname='zstd'
pkgver=1.4.3
pkgrel=1
pkgdesc='Zstandard - Fast real-time compression algorithm'
url='https://www.zstd.net/'
license=('BSD' 'GPL2')
arch=('x86_64')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
depends=(
	'gcc-libs'
	'glibc'
	'lz4'
	'sh'
	'xz'
	'zlib'
)
makedepends=('gtest')

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
source=("$pkgname-$pkgver.tar.gz::https://github.com/facebook/zstd/archive/v${pkgver}.tar.gz")
sha256sums=('5eda3502ecc285c3c92ee0cc8cd002234dee39d539b3f692997a0e80de1d33de')

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Build package
	make && make -C contrib/pzstd
}

#==============================================================================#
#       Package self testing sequence                                          #
#==============================================================================#
check() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Run internal checks
	make -k check && make -C contrib/pzstd test
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#
package() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Install files
	make PREFIX=/usr DESTDIR=$pkgdir install

	# Install 'pzstd' binary file
	install -Dm755 contrib/pzstd/pzstd $pkgdir/usr/bin/pzstd

	# Install license file
	install -Dm644 LICENSE $pkgdir/usr/share/licenses/package_name/LICENSE
}

################################################################################
#                                 END OF FILE                                  #
################################################################################
