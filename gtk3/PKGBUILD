pkgbase='gtk3'
pkgname=('gtk3' 'gtk-update-icon-cache')
pkgver=3.24.10
pkgrel=1
epoch=1
url='http://www.gtk.org/'
license=('LGPL')
arch=('x86_64')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
makedepends=(
	'git'
	'glib2-docs'
	'gobject-introspection'
	'gtk-doc'
	'meson'
	'sassc'
	'wayland-protocols'
)

