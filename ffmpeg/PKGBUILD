#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname=('ffmpeg')
pkgver=4.2.1
pkgrel=2
epoch=1
pkgdesc='Complete solution to record, convert and stream audio and video'
url='http://ffmpeg.org/'
license=('GPL3')
arch=('x86_64')

