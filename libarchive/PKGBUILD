#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname=('libarchive')
pkgver=3.4.2
pkgrel=1
pkgdesc='Multi-format archive and compression library'
url='https://libarchive.org/'
license=('BSD')
arch=('x86_64')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
depends=(
	'acl'
	'attr'
	'bzip2'
	'expat'
	'glibc'
	#'libxml2'#
	'lz4'
	'lzo'
	#'mbedtls'
	#'nettle'
	'openssl'
	'xz'
	'zlib'
	'zstd'
)

#==============================================================================#
#        Package relations                                                     #
#==============================================================================#
provides=('libarchive.so')

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
source=(
	"https://github.com/$pkgname/$pkgname/releases/download/v${pkgver}/$pkgname-$pkgver.tar.xz"
	"https://github.com/$pkgname/$pkgname/releases/download/v${pkgver}/$pkgname-$pkgver.tar.xz.asc"
)
sha256sums=(
	'd8e10494b4d3a15ae9d67a130d3ab869200cfd60b2ab533b391b0a0d5500ada1'
	'SKIP'
)

#==============================================================================#
#       Package preparation sequence                                           #
#==============================================================================#
prepare() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Create configure script
	autoreconf -fi
}

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Default configure options
	config_opts=(
		'--prefix=/usr'
		'--bindir=/usr/bin'
		'--sbindir=/usr/bin'
		'--libdir=/usr/lib'
		'--libexecdir=/usr/lib'
		'--sysconfdir=/etc'
		'--localstatedir=/var'
		'--enable-silent-rules'
		'--enable-shared'
		'--disable-static'
		'--enable-bsdtar'
		'--enable-bsdcat'
		'--enable-bsdcpio'
		'--enable-posix-regex-lib'
		'--with-iconv'
		'--with-cng'
		'--with-libb2'

	# 'acl' related options
		'--enable-acl'
		#'--disable-acl'

	# 'attr' related options
		'--enable-xattr'
		#'--disable-xattr'

	# 'bzip2' related options
		'--with-bz2lib'
		#'--without-bz2lib'

	# 'expat' related options
		'--with-expat'
		#'--without-expat'

	# 'libxml2' related options
		#'--with-xml2'
		'--without-xml2'

	# 'lz4' related options
		'--with-lz4'
		#'--without-lz4'

	# 'lzo' related options
		'--with-lzo2'
		#'--without-lzo2'

	# 'mbedtls' related options
		#'--with-mbedtls'
		'--without-mbedtls'

	# 'nettle' related options
		#'--with-nettle'
		'--without-nettle'

	# 'openssl' related options
		'--with-openssl'
		#'--without-openssl'

	# 'xz' related options
		'--with-lzma'
		#'--without-lzma'

	# 'zlib' related options
		'--with-zlib'
		#'--without-zlib'

	# 'zstd' related options
		'--with-zstd'
		#'--without-zstd'
	)

	# Run package configuration script
	./configure "${config_opts[@]}"

	# Set correct LDFLAGS to build a shared archive
	if [ -f libtool ]; then
		sed -e "s/ -shared / $LDFLAGS\0/g" -i libtool
	fi

	# Build package
	make
}

#==============================================================================#
#       Package self testing sequence                                          #
#==============================================================================#
check() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Run internal checks
	make -k check
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#
package() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Install files
	make DESTDIR=$pkgdir install

	# Install license file
	install -Dm644 COPYING $pkgdir/usr/share/licenses/libarchive/COPYING
}

################################################################################
#                                 END OF FILE                                  #
################################################################################
