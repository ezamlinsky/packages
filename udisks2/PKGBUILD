#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname='udisks2'
pkgver=2.8.4
pkgrel=1
pkgdesc='Disk Management Service, version 2'
url='https://www.freedesktop.org/wiki/Software/udisks'
license=('GPL2')
arch=('x86_64')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
depends=(
	'acl'
	'glib2'
	'glibc'
	'libatasmart'
	'libblockdev'
	'libgudev'
	#'libiscsi'
	#'libstoragemgmt'
	'libutil-linux'
	'polkit'
	'systemd-libs'
)
makedepends=(
	'docbook-xsl'
	'gobject-introspection'
	'parted'
	'gtk-doc'
)
optdepends=(
	'gptfdisk: GUID partition table support'
	'ntfs-3g: NTFS filesystem management support'
	'dosfstools: VFAT filesystem management support'
)

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
source=("https://github.com/storaged-project/udisks/archive/udisks-$pkgver.tar.gz")
sha512sums=('6a002f45e9713e891f8944138541db13665b8dad76a84bcd7449a4aa3a966dfb45cf8629812dec1827ce2ea8790b3eafa235cca4a00ceac2430c8cadfa25ec49')

#==============================================================================#
#       Package preparation sequence                                           #
#==============================================================================#
prepare() {

	# Change directory to source directory
	cd udisks-udisks-$pkgver

	# Run autogen script if exists
	if [ -x autogen.sh ]; then
		NOCONFIGURE=1 ./autogen.sh
	fi
}

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd udisks-udisks-$pkgver

	# Default configure options
	config_opts=(
		'--prefix=/usr'
		'--bindir=/usr/bin'
		'--sbindir=/usr/bin'
		'--libdir=/usr/lib'
		'--libexecdir=/usr/lib'
		'--sysconfdir=/etc'
		'--localstatedir=/var'
		'--enable-silent-rules'
		'--enable-shared'
		'--disable-static'
		'--enable-man'
		'--enable-gtk-doc'
		'--enable-debug=no'
		'--enable-introspection=no'
		'--enable-fhs-media'
		'--enable-bcache'
		'--enable-btrfs'
		'--enable-zram'
		'--disable-lvm2'
		'--disable-lvmcache'
		'--disable-vdo'
		'--with-systemdsystemunitdir=/usr/lib/systemd/system'

	# 'acl' related options
		'--enable-acl'
		#'--disable-acl'

	# 'libiscsi' related options
		#'--enable-iscsi'
		'--disable-iscsi'

	# 'libstoragemgmt' related option
		#'--enable-lsm'
		'--disable-lsm'
	)

	# Run package configuration script
	./configure "${config_opts[@]}"

	# Set correct LDFLAGS to build a shared archive
	if [ -f libtool ]; then
		sed -e "s/ -shared / $LDFLAGS\0/g" -i libtool
	fi

	# Build package
	make
}

#==============================================================================#
#       Package self testing sequence                                          #
#==============================================================================#
check() {

	# Change directory to source directory
	cd udisks-udisks-$pkgver

	# Run internal checks
	make -k check
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#
package() {

	# Change directory to source directory
	cd udisks-udisks-$pkgver

	# Install files
	make DESTDIR=$pkgdir install

	# Install license file
	install -Dm644 COPYING $pkgdir/usr/share/licenses/udisks2/LICENSE
}

################################################################################
#                                 END OF FILE                                  #
