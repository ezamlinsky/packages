#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname=('enchant')
pkgver=2.2.6
pkgrel=1
pkgdesc='A wrapper library for generic spell checking'
url='https://abiword.github.io/enchant/'
license=('LGPL')
arch=('x86_64')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
depends=(
	'gcc-libs'
	'glib2'
	'glibc'
	#'aspell'
	#'hspell'
	'hunspell'
	#'libvoikko'
)
makedepends=('git')

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
source=("$pkgname-$pkgver.tar.gz::https://github.com/AbiWord/enchant/archive/v$pkgver.tar.gz")
sha512sums=('6c17e04e3e122582c2f420fd64f7217438f7186994e8448f1a745b3b786d75c9871befb13ec46b7c8fd2efa135206017ec45e5e920efe230f599322b9d70247f')

#==============================================================================#
#       Package preparation sequence                                           #
#==============================================================================#
prepare() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Run bootstrap script
	./bootstrap
}

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Default configure options
	config_opts=(
		'--prefix=/usr'
		'--bindir=/usr/bin'
		'--sbindir=/usr/bin'
		'--libdir=/usr/lib'
		'--libexecdir=/usr/lib'
		'--sysconfdir=/etc'
		'--localstatedir=/var'
		'--enable-silent-rules'
		'--enable-shared'
		'--disable-static'
		'--disable-valgrind-tests'

	# 'aspell' related options
		#'--with-aspell'
		'--without-aspell'

	# 'hspell' related options
		#'--with-hspell'
		'--without-hspell'

	# 'hunspell' related options
		'--with-hunspell'
		#'--without-hunspell'

	# 'libvoikko' related options
		#'--with-voikko'
		'--without-voikko'
	)

	# Run package configuration script
	./configure "${config_opts[@]}"

	# Set correct LDFLAGS to build a shared archive
	if [ -f libtool ]; then
		sed -e "s/ -shared / $LDFLAGS\0/g" -i libtool
	fi

	# Build package
	make
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#
package() {

	# Change directory to source directory
	cd $pkgname-$pkgver

	# Install files
	make DESTDIR=$pkgdir install
}

################################################################################
#                                 END OF FILE                                  #
################################################################################
