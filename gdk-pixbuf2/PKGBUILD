#==============================================================================#
#       Package information                                                    #
#==============================================================================#
pkgname=('gdk-pixbuf2')
pkgver=2.40.0
pkgrel=2
pkgdesc='An image loading library'
url='https://wiki.gnome.org/Projects/GdkPixbuf'
license=('LGPL2.1')
arch=('x86_64')

#==============================================================================#
#       Package dependencies                                                   #
#==============================================================================#
depends=(
	'glib2'
	'glibc'
	'shared-mime-info'
	#'jasper'
	'libjpeg'
	'libpng'
	'libtiff'
	'libx11'
)
makedepends=(
	'gobject-introspection'
	'docbook-xsl'
	'git'
	'gtk-doc'
	'meson'
)

#==============================================================================#
#       Package miscellaneous options                                          #
#==============================================================================#
install='gdk-pixbuf2.install'

#==============================================================================#
#       Package sources and integrity                                          #
#==============================================================================#
_commit='c01d7ba433d6160767e51d928c81379746667544'  # tags/2.40.0^0
source=(
	"git+https://gitlab.gnome.org/GNOME/gdk-pixbuf.git#commit=$_commit"
	'gdk-pixbuf-query-loaders.hook'
)
sha256sums=(
	'SKIP'
	'9fb71d95e6a212779eb0f88dde5a3cee0df7f4d9183f8f9ce286f8cdc14428f0'
)

#==============================================================================#
#       Package building sequence                                              #
#==============================================================================#
build() {

	# Change directory to source directory
	cd gdk-pixbuf

	# Default configure options
	config_opts=(
		'-Dgio_sniffing=true'
		'-Dinstalled_tests=false'
		'-Drelocatable=false'
		'-Dman=true'
		'-Ddocs=false'
		'-Dgir=false'

	# 'jasper' related options
		#'-Djasper=true'
		'-Djasper=false'

	# 'libjpeg' related options
		'-Djpeg=true'
		#'-Djpeg=false'

	# 'libpng' related options
		'-Dpng=true'
		#'-Dpng=false'

	# 'libtiff' related options
		'-Dtiff=true'
		#'-Dtiff=false'

	# 'libx11' related options
		'-Dx11=true'
		#'-Dx11=false'
	)

	# Run package configuration script
	arch-meson build "${config_opts[@]}"

	# Build package
	ninja -C build
}

#==============================================================================#
#       Package self testing sequence                                          #
#==============================================================================#
check() {

	# Change directory to source directory
	cd gdk-pixbuf

	# Run internal tests
	ninja -C build test
}

#==============================================================================#
#       Package installation sequence                                          #
#==============================================================================#
package() {

	# Change directory to source directory
	cd gdk-pixbuf

	# Install files
	DESTDIR=$pkgdir ninja -C build install

	# Install vendor's hooks
	install -Dm644 $srcdir/gdk-pixbuf-query-loaders.hook \
	$pkgdir/usr/share/libalpm/hooks/gdk-pixbuf-query-loaders.hook

	# Remove installed tests
	rm -rf $pkgdir/usr/{lib,share}/installed-tests
}

################################################################################
#                                 END OF FILE                                  #
################################################################################
